# ============================================================
# Jerome Dental Front-Office Agent - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================================

# ============================================================
# CLOUD API (apps/api)
# ============================================================

# Application
DEBUG=false
SECRET_KEY=change-me-use-openssl-rand-hex-32

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/jerome_dental
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# JWT Authentication
JWT_ALGORITHM=RS256
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Azure OpenAI (HIPAA BAA Required)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================
# LOCAL AGENT (apps/local-agent)
# ============================================================

# Cloud API Connection
CLOUD_API_URL=https://api.yourdomain.com
AGENT_API_KEY=practice-specific-api-key-here

# Practice Configuration
PRACTICE_ID=your-practice-uuid
PRACTICE_SALT=unique-salt-for-phi-hashing

# PMS Connection Type: csv | dentrix | eaglesoft | playwright
PMS_TYPE=csv

# Dentrix ODBC (if PMS_TYPE=dentrix)
DENTRIX_ODBC_DSN=DentrixDB
DENTRIX_ODBC_USER=
DENTRIX_ODBC_PASSWORD=

# Eaglesoft (if PMS_TYPE=eaglesoft)
EAGLESOFT_DB_PATH=C:\Eaglesoft\Data

# CSV Import (if PMS_TYPE=csv)
CSV_IMPORT_PATH=C:\DentalData\schedule.csv

# Scheduling
SCHEDULE_TRIGGER_TIME=06:00
SCHEDULE_TIMEZONE=America/New_York

# Local Cache
SQLITE_CACHE_PATH=./cache/local.db
CACHE_RETENTION_DAYS=7

# ============================================================
# FRONTEND (apps/web)
# ============================================================

# API URL (public, exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# App URL (for OAuth callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# ============================================================
# INFRASTRUCTURE (Production Only)
# ============================================================

# Sentry Error Tracking
SENTRY_DSN=

# Vercel (auto-populated)
VERCEL_URL=

# ============================================================
# DEVELOPMENT ONLY
# ============================================================

# TaskMaster AI (for generating tasks from PRD)
ANTHROPIC_API_KEY=

# Playwright (for local agent testing)
PLAYWRIGHT_HEADLESS=true
