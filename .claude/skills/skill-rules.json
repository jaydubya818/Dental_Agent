{
  "version": "1.0",
  "description": "Skill activation rules for SellerFi seller-financing-platform",
  "skills": {
    "backend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "api",
          "endpoint",
          "route",
          "backend",
          "server",
          "prisma",
          "database",
          "migration",
          "model",
          "schema",
          "nextauth",
          "authentication",
          "middleware"
        ],
        "intentPatterns": [
          "creat(e|ing)\\s+(api|endpoint|route)",
          "add\\s+(api|endpoint|route)",
          "fix\\s+(api|backend|server)",
          "updat(e|ing)\\s+prisma",
          "databas(e|ing)\\s+(query|migration)",
          "authenti(cate|cation)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/api/**/*.{ts,tsx}",
          "lib/**/*.{ts,tsx}",
          "prisma/**/*",
          "auth.{ts,tsx,js,config.*}",
          "middleware.{ts,tsx}"
        ],
        "contentPatterns": [
          "import.*prisma",
          "import.*@prisma/client",
          "import.*next-auth",
          "NextRequest",
          "NextResponse"
        ]
      }
    },
    "frontend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "component",
          "react",
          "ui",
          "frontend",
          "shadcn",
          "radix",
          "tailwind",
          "form",
          "button",
          "dialog",
          "toast",
          "client component"
        ],
        "intentPatterns": [
          "creat(e|ing)\\s+(component|ui|page)",
          "add\\s+(button|form|dialog|modal)",
          "fix\\s+(ui|frontend|component|render)",
          "styl(e|ing)",
          "react\\s+(hook|state|effect)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "components/**/*.{ts,tsx}",
          "app/**/page.{ts,tsx}",
          "app/**/layout.{ts,tsx}",
          "hooks/**/*.{ts,tsx}"
        ],
        "contentPatterns": [
          "import.*react",
          "import.*@radix-ui",
          "import.*@/components/ui",
          "use(State|Effect|Callback|Memo|Ref)",
          "'use client'"
        ]
      }
    },
    "route-tester": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "test route",
          "test api",
          "test endpoint",
          "api test",
          "route test",
          "test authentication",
          "test auth"
        ],
        "intentPatterns": [
          "test(ing)?\\s+(api|route|endpoint)",
          "verify\\s+(api|route|endpoint)",
          "check\\s+(api|route|endpoint)",
          "debug\\s+(api|route|endpoint)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/api/**/*.{ts,tsx}",
          "__tests__/api/**/*.{test,spec}.{ts,tsx}"
        ]
      }
    },
    "error-tracking": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "sentry",
          "error tracking",
          "error boundary",
          "logging",
          "breadcrumb",
          "trace",
          "monitoring"
        ],
        "intentPatterns": [
          "add\\s+(sentry|error tracking|logging)",
          "track\\s+error",
          "monitor(ing)?",
          "error\\s+(boundary|handling)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/error.{ts,tsx}",
          "**/global-error.{ts,tsx}",
          "lib/**/*error*.{ts,tsx}",
          "sentry.*.config.{ts,js}"
        ],
        "contentPatterns": [
          "import.*@sentry",
          "Sentry\\.",
          "captureException",
          "ErrorBoundary"
        ]
      }
    },
    "skill-developer": {
      "type": "domain",
